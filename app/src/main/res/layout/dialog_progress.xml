<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dialog"
            type="jp.gr.java_conf.nuranimation.new_book_search.ui.dialog.ProgressDialogViewModel" />
    </data>

    <LinearLayout
        tools:ignore="SpUsage"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/progress_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_large"
            android:textColor="#FF000000"
            android:text="@{dialog.title}"
            />
        <TextView
            android:id="@+id/progress_dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#FF000000"
            android:text="@{dialog.message}"
            />
        <TextView
            android:id="@+id/progress_dialog_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_gravity="end"
            android:gravity="end"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#FF000000"
            android:text="@{dialog.progress}"
            />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_gravity="center"
            android:indeterminate="true"
            style="?android:attr/progressBarStyle" />

    </LinearLayout>

</layout>